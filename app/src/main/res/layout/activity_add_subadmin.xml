<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/manage_add_admin_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:fitsSystemWindows="true"
        app:popupTheme="@style/MyPopupTheme"
        android:theme="@style/MyToolBarTheme"
        app:contentInsetStartWithNavigation="0dp"
        app:titleTextAppearance="@style/Toolbar.TitleText"
        app:title="@string/app_name">

    </androidx.appcompat.widget.Toolbar>

    <androidx.coordinatorlayout.widget.CoordinatorLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:id="@+id/layout_inner"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_width="match_parent">



            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                app:cardCornerRadius="5dp"
                app:cardElevation="5dp"
                android:alpha="0.9"
                android:layout_marginTop="@dimen/size_fifteen"
                android:layout_marginStart="@dimen/size_twelve"
                android:layout_marginEnd="@dimen/size_twelve"
                android:layout_marginBottom="@dimen/size_twelve"
                android:layout_gravity="center"
                >

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="vertical"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="vertical">


                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/inputLayoutFullName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/size_ten"
                            android:layout_marginLeft="@dimen/size_ten"
                            android:layout_marginRight="@dimen/size_ten"
                            >

                            <EditText
                                android:id="@+id/fullname_editxt"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:drawableStart="@drawable/ic_person_black_24dp"
                                android:hint="Full Name"
                                android:drawableTint="@color/colorPrimary"
                                android:inputType="textPersonName"
                                android:fontFamily="@font/nunito_regular"
                                android:drawableLeft="@drawable/ic_person_black_24dp" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/inputLayoutPhoneNum"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/size_ten"
                            android:layout_marginLeft="@dimen/size_ten"
                            android:layout_marginRight="@dimen/size_ten"
                            >

                            <EditText
                                android:id="@+id/phonenum_editxt"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:drawableStart="@drawable/ic_local_phone_black_24dp"
                                android:hint="Phone number"
                                android:drawableTint="@color/colorPrimary"
                                android:inputType="number"
                                android:importantForAutofill="no"
                                android:fontFamily="@font/nunito_regular"
                                android:drawableLeft="@drawable/ic_local_phone_black_24dp" />
                        </com.google.android.material.textfield.TextInputLayout>
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/inputLayoutAddress"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/size_ten"
                            android:layout_marginLeft="@dimen/size_ten"
                            android:layout_marginRight="@dimen/size_ten"
                            >

                            <EditText
                                android:id="@+id/addr_editxt"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:drawableStart="@drawable/ic_location_on_black_24dp"
                                android:hint="Address"
                                android:drawableTint="@color/colorPrimary"
                                android:inputType="text"
                                android:fontFamily="@font/nunito_regular"
                                android:drawableLeft="@drawable/ic_location_on_black_24dp" />

                        </com.google.android.material.textfield.TextInputLayout>



                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/inputLayoutEmail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/size_ten"
                            android:layout_marginLeft="@dimen/size_ten"
                            android:layout_marginRight="@dimen/size_ten"
                            >

                            <EditText
                                android:id="@+id/email_editxt"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:drawableStart="@drawable/ic_email_black_24dp"
                                android:hint="Email"
                                android:drawableTint="@color/colorPrimary"
                                android:inputType="textEmailAddress"
                                android:importantForAutofill="no"
                                android:fontFamily="@font/nunito_regular"
                                android:drawableLeft="@drawable/ic_email_black_24dp" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/inputLayoutPassword"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:layout_marginTop="@dimen/size_ten"
                            android:layout_marginLeft="@dimen/size_ten"
                            android:layout_marginRight="@dimen/size_ten"
                            >

                            <EditText
                                android:id="@+id/password_editxt"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:drawableStart="@drawable/ic_vpn_key_black_24dp"
                                android:hint="Password (at least 6 characters)"
                                android:fontFamily="@font/nunito_regular"
                                android:drawableTint="@color/colorPrimary"
                                android:inputType="textPassword"
                                android:importantForAutofill="no"
                                android:drawableLeft="@drawable/ic_vpn_key_black_24dp" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/inputLayoutConfirmPassword"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:layout_marginTop="@dimen/size_ten"
                            android:layout_marginLeft="@dimen/size_ten"
                            android:layout_marginRight="@dimen/size_ten"
                            >

                            <EditText
                                android:id="@+id/confirm_pass_editxt"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:importantForAutofill="no"
                                android:drawableStart="@drawable/ic_vpn_key_black_24dp"
                                android:hint="Confirm Password (at least 6 characters)"
                                android:fontFamily="@font/nunito_regular"
                                android:drawableTint="@color/colorPrimary"
                                android:inputType="textPassword"
                                android:drawableLeft="@drawable/ic_vpn_key_black_24dp" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <Button
                            android:id="@+id/signup_btn"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/size_fifteen"
                            android:background="@color/colorGrey"
                            android:text="Register"
                            android:textSize="16sp"
                            android:fontFamily="@font/nunito_semibold"
                            android:textColor="@color/colorPrimary"
                            android:visibility="visible" />

                        <com.wang.avi.AVLoadingIndicatorView
                            android:id="@+id/avi1"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/size_thirty_three"
                            android:layout_gravity="center"
                            android:visibility="gone"
                            app:indicatorColor="@color/colorAccent"
                            app:indicatorName="BallSpinFadeLoaderIndicator" />


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="© 2020 FaithModel Nig. Ltd."
                            android:textAlignment="center"
                            android:layout_margin="2dp"
                            android:fontFamily="@font/nunito_regular"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="@color/colorDarkerGrey"
                            />


                    </LinearLayout>


                </ScrollView>


            </com.google.android.material.card.MaterialCardView>

        </androidx.coordinatorlayout.widget.CoordinatorLayout>




    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</LinearLayout>

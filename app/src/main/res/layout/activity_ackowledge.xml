<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/acknowlegeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/serviceform_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:fitsSystemWindows="true"
        app:popupTheme="@style/MyPopupTheme"
        android:theme="@style/MyToolBarTheme"
        app:titleTextColor="#FFFFFF"
        app:titleTextAppearance="@style/Toolbar.TitleText"
        app:title="@string/app_name">

    </androidx.appcompat.widget.Toolbar>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/smart_service"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.9"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:padding="4dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/delivery_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pending"
                android:textSize="21sp"
                android:padding="10dp"
                android:background="@drawable/outline_transparent_bg"
                android:textColor="@color/colorWhite"
                android:fontFamily="@font/nunito_bold"/>



        </LinearLayout>



    </FrameLayout>

<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:gravity="center"
    android:layout_margin="4dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/customer_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Customer Name: Michael Boluwaji"
            android:textAlignment="textStart"
            android:layout_margin="2dp"
            android:textColor="@color/colorAccent"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/customer_phone_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Phone No: 090983457648"
            android:textAlignment="textStart"
            android:layout_margin="2dp"
            android:textColor="@color/colorAccent"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/customer_addr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Address: fsfsfssfsvvvvvvvvvvvvvvvvvvvvvvveeeeeee"
            android:textAlignment="textStart"
            android:layout_margin="2dp"
            android:textColor="@color/colorAccent"
            android:textSize="18sp" />


        <Button
            android:id="@+id/deliver_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delivered"
            android:textSize="21sp"
            android:layout_margin="10dp"
            android:background="@drawable/outline_transparent_bg2"
            android:layout_gravity="center"
            android:textColor="@color/colorPrimaryDark" />

        <com.wang.avi.AVLoadingIndicatorView
            android:id="@+id/avi1"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/size_forty_five"
            android:visibility="gone"
            app:indicatorColor="@color/colorAccent"
            app:indicatorName="BallSpinFadeLoaderIndicator" />

    </LinearLayout>






</FrameLayout>





</LinearLayout>
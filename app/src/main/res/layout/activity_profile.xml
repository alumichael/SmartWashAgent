<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/profileLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/serviceform_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:fitsSystemWindows="true"
        app:popupTheme="@style/MyPopupTheme"
        android:theme="@style/MyToolBarTheme"
        app:contentInsetStartWithNavigation="0dp"
        app:titleTextAppearance="@style/Toolbar.TitleText"
        app:title="@string/app_name">

    </androidx.appcompat.widget.Toolbar>



    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:background="@drawable/profile_header" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal">

            <RelativeLayout
                android:id="@+id/relative_layout_photo"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="30dp"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                android:foregroundGravity="right|bottom">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile_photo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/man"
                    app:civ_border_color="@color/colorWhite"
                    app:civ_border_width="2dp"
                    android:clickable="false" />

                <ImageView
                    android:id="@+id/edit_prof"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="5dp"
                    android:background="@drawable/rounded_white"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    app:srcCompat="@drawable/ic_edit_black_24dp"
                    android:padding="@dimen/size_ten"
                    android:clickable="true"
                    android:layout_alignParentRight="true" />

                <ProgressBar
                    android:id="@+id/progressBar_profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone" />
            </RelativeLayout>

            <TextView
                android:id="@+id/fullname_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Michael Boluwaji"
                android:textSize="23sp"
                android:textColor="@color/colorWhite"
                android:textAlignment="center"
                android:layout_marginTop="8dp"

                />

        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@color/colorAccent"
            android:layout_gravity="bottom" />

    </FrameLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorWhite" />


        <ScrollView
            android:id="@+id/profile_data_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"
            android:visibility="visible"

            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">




                <com.google.android.material.card.MaterialCardView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:cardCornerRadius="5dp"
                    android:backgroundTint="@color/colorWhite">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/size_eighteen"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/ic_email_black_24dp" />

                        <TextView
                            android:id="@+id/email"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Email"
                            android:layout_weight="1"
                            android:gravity="start"
                            android:layout_margin="2dp"
                            android:textColor="@color/colorAccent"
                            android:textSize="16sp" />


                    </LinearLayout>


                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:cardCornerRadius="5dp"
                    android:backgroundTint="@color/colorWhite">


                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:cardCornerRadius="5dp"
                    android:backgroundTint="@color/colorWhite">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/size_eighteen"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/ic_local_phone_black_24dp" />

                        <TextView
                            android:id="@+id/phone_num"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Phone Number"
                            android:layout_weight="1"
                            android:gravity="start"

                            android:layout_margin="2dp"
                            android:textColor="@color/colorAccent"
                            android:textSize="16sp" />


                    </LinearLayout>


                </com.google.android.material.card.MaterialCardView>


                <com.google.android.material.card.MaterialCardView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:cardCornerRadius="5dp"
                    android:backgroundTint="@color/colorWhite">


                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:cardCornerRadius="5dp"
                    android:backgroundTint="@color/colorWhite">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/size_eighteen"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/ic_location_on_black_24dp" />

                        <TextView
                            android:id="@+id/address_txt"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Address"
                            android:layout_weight="1"
                            android:gravity="start"
                            android:layout_margin="2dp"
                            android:textColor="@color/colorAccent"
                            android:textSize="16sp" />


                    </LinearLayout>


                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:cardCornerRadius="5dp"
                    android:backgroundTint="@color/colorWhite">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/size_eighteen"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/ic_person_black_24dp" />

                        <TextView
                            android:id="@+id/role_txt"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Role"
                            android:layout_weight="1"
                            android:gravity="start"
                            android:layout_margin="2dp"
                            android:textColor="@color/colorAccent"
                            android:textSize="16sp" />


                    </LinearLayout>


                </com.google.android.material.card.MaterialCardView>


            </LinearLayout>


        </ScrollView>


        <ScrollView
            android:id="@+id/edit_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/size_eight"
                android:orientation="vertical"
                android:padding="@dimen/size_ten">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/inputLayoutFullName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/full_editxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/size_ten"
                        android:layout_marginRight="@dimen/size_ten"
                        android:hint="Full Name"

                        android:inputType="textPersonName"
                        android:padding="@dimen/size_ten" />
                </com.google.android.material.textfield.TextInputLayout>





                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/inputLayoutPhone_NumP"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/phone_num_editxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/size_ten"
                        android:layout_marginRight="@dimen/size_ten"
                        android:hint="Phone Number"
                        android:inputType="number"
                        android:padding="@dimen/size_ten" />
                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/inputLayoutAddr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/address_editxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/size_ten"
                        android:layout_marginRight="@dimen/size_ten"
                        android:hint="Address"
                        android:inputType="textPersonName"
                        android:padding="@dimen/size_ten" />
                </com.google.android.material.textfield.TextInputLayout>

                <Button
                    android:id="@+id/update_btn"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size_eighteen"
                    android:layout_marginTop="@dimen/size_sixteen"
                    android:layout_marginRight="@dimen/size_eighteen"
                    android:background="@color/colorGrey"
                    android:text="Register"
                    android:textSize="16sp"
                    android:fontFamily="@font/nunito_semibold"
                    android:textColor="@color/colorPrimary"
                    android:layout_gravity="center_horizontal" />

                <com.wang.avi.AVLoadingIndicatorView
                    android:id="@+id/avi1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    app:indicatorColor="@color/colorAccent"
                    app:indicatorName="BallSpinFadeLoaderIndicator" />
            </LinearLayout>
        </ScrollView>


    </FrameLayout>


</LinearLayout>